
<% if current_user.photo.attached? %>
  <%= cl_image_tag(current_user.photo.key, height: 200, crop: :fill) %>
<% else %>
  <%= image_tag("xadrez.jpg", height: 200) %>
<% end %>

<div>
  <ul>
    <li><%= @user.first_name %></li>
    <li><%= @user.email %></li>
    <li><%= @user.address %></li>
  </ul>
</div>

<div>
  <h2><%= link_to "Edit user", edit_user_registration_path, class: "btn btn-warning" %></h2>
</div>

<div>
  <h2><%= link_to "Delete user", user_registration_path, class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete your profile?"}%></h2>
</div>
