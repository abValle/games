 <%= render 'shared/banner' %>
  <div class="container-menu">
    <div class="row">
      <div class="col-sm-2">
        <div class='menu'>
          <h2>Categories</h2>
          <ul class='myMenu'>
            <% boards = @boards.map { |b| b.category}.uniq.sort %>
            <% boards.each do |board| %>
              <li> <%= link_to board, root_path(param: board) %> </li>
            <% end %>
          </ul>
          <div class="flexbox">
            <div>
              <%= link_to "Clean filter", root_path, class: "btn btn-primary" %>
            </div>
            <div>
              <%= link_to "New board", new_board_path, class: "btn btn-primary mt-5" if current_user.present? %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-sm-10">

        <div class= 'search_bar'>
          <%= form_with url: root_path, method: :get, class: 'd-flex mt-4' do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a game" %>
            <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
        </div>

        <% @boards.each do |board| %>
          <div class="card-product">
            <%= cl_image_tag board.photo.key, class: 'card_img' %>
            <div class="card-product-infos">
              <h2><%= link_to "#{board.title}", board_path(board)%></h2>
              <p>Rating: <strong><%=board.rating%></strong></p>
              <p>Category: <strong><%=board.category%></strong></p>
              <p>Owner: <strong><%=board.user.first_name%></strong></p>
              <p>Number of players: <strong><%=board.player_number%></strong></p>
            </div>
          </div>
        <% end %>
      </div>
     </div>
    </div>

  </div>

  <div class="footer">
      <div class="footer-links">
        <div class= 'search_bar'>
          <%= form_with url: root_path, method: :get, class: 'd-flex mt-4' do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a game" %>
            <%= submit_tag "Search", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <div class="footer-copyright">
    This footer is made with <<i class="fa-solid fa-gamepad"></i>></i> at Le Wagon
      </div>

    </div>
  </div>
