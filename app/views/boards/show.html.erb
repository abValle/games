<div class="container">
  <div class="row">
    <div class="col-sm-6 mx-auto">
      <div>
        <h1>Show board</h1>
        <h2><%= @board.title %></h2>
        <p><%="Category: #{@board.category}"%></p>
        <p><%="PreÃ§o: #{@board.price}"%></p>
        <p><%="Rating: #{@board.rating}/5"%></p>
        <p><%="Players Number: #{@board.player_number}"%></p>
        <p><%="Owner: #{@board.user.first_name}"%></p>
      </div>

      <%= cl_image_tag @board.photo.key %>

      <div>
      <h2><%= link_to "Edit Game", edit_board_path(@board), class: "btn btn-warning" %></h2>
      </div>


      <div>
      <h2><%= link_to "Delete board", board_path(@board), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this board?"}%></h2>
      </div>



      <div>
      <h2><%= link_to "Home", root_path, class: "btn btn-dark" %></h2>
      </div>


      <div>
      <h2><%= link_to "Rent this game", new_board_rent_path(@board), class: "btn btn-dark" %></h2>
      </div>
    </div>
  </div>
</div>
