<div>
  <div  class="mt-3">
    <div class="d-flex align-items-center justify-content-center" style="height: 100vh;">
      <div class="card" style="width: 400px">
        <%= cl_image_tag @board.photo.key, height: 400 %>
        <div class="card-body">
          <h1 class="card-title d-flex justify-content-center"><%= @board.title %></h1>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>Category:</strong> <%="#{@board.category}"%></li>
          <li class="list-group-item"><strong>Rating: </strong><%="#{@board.rating}/5"%></li>
          <li class="list-group-item"><strong>Players Number: </strong><%="#{@board.player_number}"%></li>
          <li class="list-group-item"><strong>Pre√ßo:  </strong><%="U$ #{@board.price}"%></li>
        </ul>
        <div class="card-body">
          <div class="d-flex justify-content-center">
            <%= link_to "Rent", new_board_rent_path(@board), class: "btn btn-dark mx-5 mt-2" %>
            <%= link_to "Home", root_path, class: "btn btn-dark mx-5 mt-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
